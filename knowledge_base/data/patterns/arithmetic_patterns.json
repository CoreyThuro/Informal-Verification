          "description": "Unfold the divide definition"
        },
        {
          "tactic": "exists",
          "description": "Provide the witness for divisibility"
        }
      ],
      "lean": [
        {
          "tactic": "intro",
          "description": "Introduce variables"
        },
        {
          "tactic": "use",
          "description": "Provide the witness for divisibility"
        },
        {
          "tactic": "ring",
          "description": "Solve with ring arithmetic"
        }
      ]
    },
    "translation_strategy": {
      "default": "tactic_based",
      "coq": "tactic_based",
      "lean": "tactic_based"
    }
  }
}